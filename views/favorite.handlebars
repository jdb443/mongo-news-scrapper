<h2>Showing Favorite Articles</h2>
<div class="table-responsive" id="table-container">
    <table class="table table-striped">
        <thead>
            <tr>
                {{!-- <th scope="col">_id</th> --}}
                <th scope="col">Title</th>
                <th scope="col">Summary</th>
                {{!-- <th scope="col">Byline</th> --}}
                <th scope="col">Link</th>
                <th scope="col">Article Notes</th>
                <th scope="col">Unfavorite the Article</th>
            </tr>
        </thead>
        <tbody>
            {{#each article}}
            <tr>
                {{!-- <td>{{this._id}}</td> --}}
                <td class="maxTitle">{{this.title}}</td>
                <td class="maxSummary">{{this.summary}}</td>
                {{!-- <td class="maxByline">{{this.byline}}</td> --}}
                <td class="maxLink">{{this.link}}</td>
                <td>
                    <button class="article-notes" data-id={{this._id}}>Article Notes</button>
                </td>
                <td>
                    <button class="article-unfavorite" data-id={{this._id}}>Unfavorite the Article</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div id="notes"></div>